{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "shell:default",
    "os:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bash",
          "cmd": "bash",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "zsh",
          "cmd": "zsh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "fish",
          "cmd": "fish",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "nushell",
          "cmd": "nu",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": [
            "-Command",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "dialog:default"
  ]
}